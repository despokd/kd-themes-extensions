{
  "manifest_version": 3,
  "name": "KD Themes",
  "description": "CSS themes and improvements by Kilian Domaratius for specific websites",
  "version": "1.0.0",
  "author": "Kilian Domaratius",
  "icons": {
    "16": "./img/icon16.png",
    "32": "./img/icon32.png",
    "128": "./img/icon128.png"
  },
  "action": {
    "default_icon": "./img/icon16.png",
    "default_popup": "./popup/popup.html",
    "default_title": "KD Themes"
  },
  "background": {
    "service_worker": "service_worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "all_frames": true,
      "js": [
        "./content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "storage",
    "scripting",
    "webNavigation"
  ],
  "host_permissions": [
    "*://*/*"
  ]
}